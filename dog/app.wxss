/**app.wxss**/
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.mainBG{
  background-color: #00cc80;
}
.mainColor{
  color: #00cc80;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.cf{
  clear: both;
}
page{
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.sign-bt{
  width: 100%;
  height: 100rpx;
  color: #ffffff;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
}


/* 活动模块样式 */
.activity-item{
  margin-top: 18rpx;
  width: 706rpx;
	background-color: #ffffff;
	box-shadow: 0rpx 0rpx 12rpx 1rpx 
		rgba(0, 0, 0, 0.04);
	border-radius: 8rpx;
  position: relative;
}
.activity-info{
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 30rpx 30rpx 30rpx;
}
.info-item{
  width: 50%;
  float: left;
}
.info-text{
  font-size: 26rpx;
  position: relative;
  padding-left: 20rpx;
  line-height: 36rpx;
}
.info-text::before{
  content: '';
  position: absolute; 
  display: block;
  width: 10rpx;
  height: 26rpx;
  background-color: #00cc80;
  left: 0rpx;
  top: 5.5rpx;
}
.info-content{
  font-size: 36rpx;  
  line-height: 46rpx; 
  color: #353535;
}
.activity-detail{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}